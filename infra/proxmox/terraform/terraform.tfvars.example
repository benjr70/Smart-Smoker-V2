# Virtual Smoker Device - Mirrors production Raspberry Pi 3 specs
# Prerequisites:
#   1. Create VM template (ID 9000) with Debian/Ubuntu cloud-init image
#   2. Configure NAT routing if using isolated network bridge
#   3. Have Tailscale auth key ready for Ansible provisioning
# Swap (100MB) is configured via Ansible virtual-device role
virtual_smoker = {
  enabled             = true
  target_node         = "pve-node-2"
  vm_name             = "virtual-smoker-device"
  description         = "Virtual smoker test device - mirrors Raspberry Pi 3 specs (Phase 3 Story 2)"
  resource_pool       = "smart-smoker"
  clone_template      = 9000
  storage             = "local-lvm"
  cpu_architecture    = "x86_64"
  cpu_cores           = 4       # Match Pi 3 quad-core Cortex-A53
  cpu_sockets         = 1
  cpu_type            = "host"
  memory_mb           = 1024    # Match Pi 3 ~1GB RAM
  network_bridge      = "vmbr0" # Use main bridge for Tailscale connectivity
  ipv4_cidr           = "10.20.0.40/24"
  gateway             = "10.20.0.1"
  dns_servers         = []
  search_domain       = ""
  ssh_public_keys     = []
  cloud_init_user     = "smoker"
  cloud_init_password = "CHANGE_ME"
  mac_address         = ""
  vlan_tag            = 0
  tags                = ["device", "virtual", "phase3"]
  full_clone          = true
}
