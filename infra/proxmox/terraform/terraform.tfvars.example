prod_cloud = {
  enabled          = true
  target_node      = "pve-node-2"
  hostname         = "smart-smoker-cloud-prod"
  description      = "Production cloud environment"
  template         = "local:vztmpl/ubuntu-22.04-standard_22.04-1_amd64.tar.zst"
