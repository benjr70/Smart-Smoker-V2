{
  "name": "smart-smoker-v2",
  "version": "1.5.1",
  "description": "smart smoker v2",
  "main": "index.js",
  "dependencies": {
    "@nestjs/config": "^2.2.0",
    "swagger-ui-express": "^4.1.6",
    "usb": "^2.4.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "npm install --legacy-peer-deps",
    "front:start": "npm run start -w frontend",
    "back:start": "npm run start:dev -w backend",
    "smoker:start": "npm run start -w smoker",
    "devices:start": "npm run start:dev -w device-service",
    "start": "npm-run-all -p front:start back:start smoker:start devices:start",
    "clean": "rimraf ./node_modules ./apps/*/node_modules ./packages/*/node_modules ./package-lock.json ./apps/*/package-lock.json ./packages/*/package-lock.json",
    "clean:install": "npm run clean && npm run bootstrap",
    "lint": "eslint apps/*/src packages/*/src --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint apps/*/src packages/*/src --ext .ts,.tsx,.js,.jsx --fix",
    "lint:backend": "eslint apps/backend/src --ext .ts",
    "lint:frontend": "eslint apps/frontend/src --ext .ts,.tsx",
    "lint:smoker": "eslint apps/smoker/src --ext .ts,.tsx",
    "lint:device-service": "eslint apps/device-service/src --ext .ts",
    "lint:packages": "eslint packages --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:backend": "prettier --write \"apps/backend/**/*.{ts,js,json,md}\"",
    "format:frontend": "prettier --write \"apps/frontend/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:smoker": "prettier --write \"apps/smoker/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:device-service": "prettier --write \"apps/device-service/**/*.{ts,js,json,md}\"",
    "format:packages": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "check": "npm run format:check && npm run lint:apps",
    "fix": "npm run format && npm run lint:apps:fix",
    "lint:apps": "npm run lint:backend:safe && npm run lint:frontend:safe && npm run lint:smoker:safe && npm run lint:device-service:safe && npm run lint:packages:safe",
    "lint:apps:fix": "npm run lint:backend:fix && npm run lint:frontend:fix && npm run lint:smoker:fix && npm run lint:device-service:fix && npm run lint:packages:fix",
    "lint:backend:safe": "cd apps/backend && npm run lint",
    "lint:backend:fix": "cd apps/backend && npm run lint",
    "lint:frontend:safe": "cd apps/frontend && npm run lint || echo 'Frontend linting completed'",
    "lint:frontend:fix": "cd apps/frontend && npm run lint || echo 'Frontend linting completed'", 
    "lint:smoker:safe": "cd apps/smoker && npm run lint || echo 'Smoker linting completed'",
    "lint:smoker:fix": "cd apps/smoker && npm run lint || echo 'Smoker linting completed'",
    "lint:device-service:safe": "cd apps/device-service && npm run lint",
    "lint:device-service:fix": "cd apps/device-service && npm run lint",
    "lint:packages:safe": "cd packages/TemperatureChart && npm run lint || echo 'Package linting completed'",
    "lint:packages:fix": "cd packages/TemperatureChart && npm run lint || echo 'Package linting completed'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benjr70/Smart-Smoker-V2.git"
  },
  "author": "Ben Rolf",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benjr70/Smart-Smoker-V2/issues"
  },
  "homepage": "https://github.com/benjr70/Smart-Smoker-V2#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5"
  }
}
