{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "maxWorkers": 1,
  "logHeapUsage": false,
  "detectOpenHandles": false,
  "forceExit": true,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true,
  "setupFilesAfterEnv": ["<rootDir>/test-setup.ts"],
  "bail": true,
  "verbose": false,
  "testTimeout": 10000,
  "testNamePattern": "^(?!.*production mode).*",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "main.spec.ts",
    "logger.middleware.spec.ts"
  ]
}
